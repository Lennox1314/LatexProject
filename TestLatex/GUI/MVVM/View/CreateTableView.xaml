<UserControl x:Class="LatexProject.GUI.MVVM.View.CreateTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LatexProject.GUI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="btncreateTextBoxes" Content="Create Boxes" HorizontalAlignment="Left" Margin="0,87,0,0" VerticalAlignment="Top" Click="btnCreateGrid_Click"/>
        <Canvas Margin="290,10,30,10"
        Name="canContainer"/>
        <TextBox x:Name="xCoord" HorizontalAlignment="Left" Margin="0,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="48" Height="18"/>
        <TextBox x:Name="yCoord" HorizontalAlignment="Left" Margin="100,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="49"/>
        <TextBlock Text="Enter the size of table you want to create" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
        <Button x:Name="btncreateOutput" Content="Create Output" HorizontalAlignment="Left" Margin="0,121,0,0" VerticalAlignment="Top" Click="btnCreateOutput_Click"/>
        <TextBox x:Name="LaTeXCodeTextBox" HorizontalAlignment="Left" Margin="0,177,0,0" TextWrapping="Wrap" Text="Latex Ouput" VerticalAlignment="Top"  Width="200"/>
        <Button x:Name="btnClearScreen" Content="Clear" HorizontalAlignment="Left" Margin="16,149,0,0" VerticalAlignment="Top" Click="btnClearScreen_Click"/>
    </Grid>
</UserControl>
