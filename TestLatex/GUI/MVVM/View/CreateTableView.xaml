<UserControl x:Class="LatexProject.GUI.MVVM.View.CreateTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LatexProject.GUI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="btncreateTextBoxes" Content="Create Boxes" HorizontalAlignment="Left" Margin="128,49,0,0" VerticalAlignment="Top" Click="btnCreateGrid_Click" RenderTransformOrigin="0.508,0.577"/>
        <Canvas Margin="290,10,30,10"
        Name="canContainer"/>
        <TextBox x:Name="xCoord" HorizontalAlignment="Left" Margin="0,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="56" Height="18"/>
        <TextBox x:Name="yCoord" HorizontalAlignment="Left" Margin="59,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="59"/>
        <TextBlock Text="Enter the size of table you want to create" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
        <Button x:Name="btncreateOutput" Content="Create Output" HorizontalAlignment="Left" Margin="0,138,0,0" VerticalAlignment="Top" Click="btnCreateOutput_Click"/>
        <TextBox x:Name="LaTeXCodeTextBox" HorizontalAlignment="Left" Margin="0,188,0,0" TextWrapping="Wrap" Text="Latex Ouput" VerticalAlignment="Top"  Width="200"/>
        <Button x:Name="btnClearScreen" Content="Clear" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top" Click="btnClearScreen_Click"/>
        <Label x:Name="lbl_rows" Content="Rows" HorizontalAlignment="Left" Margin="9,31,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="3.762,1.581"/>
        <Label x:Name="lbl_columns" Content="Columns" HorizontalAlignment="Left" Margin="59,31,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="0.463,0.691"/>
        <CheckBox x:Name="chkbox_tableHeader" Content="Table Header?" HorizontalAlignment="Left" Margin="0,74,0,0" VerticalAlignment="Top" Foreground="White" Checked="chkbox_tableHeader_Checked" IsChecked="False" Unchecked="chkbox_tableHeader_Unhecked"/>
        <TextBox x:Name="txt_tableHeader" HorizontalAlignment="Left" Margin="0,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
        <Label x:Name="lbl_tableHeaderContent" Content="Enter Table Header Below" HorizontalAlignment="Left" Margin="0,89,0,0" VerticalAlignment="Top" Foreground="White" Visibility="Collapsed"/>
    </Grid>
</UserControl>
