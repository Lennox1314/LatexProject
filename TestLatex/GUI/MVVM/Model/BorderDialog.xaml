<Window x:Class="LatexProject.GUI.MVVM.Model.BorderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LatexProject.GUI.MVVM.Model"
        mc:Ignorable="d"
        Title="MergeCellDialog" Height="150" Width="400">
    <DockPanel VerticalAlignment="Center">
        <StackPanel DockPanel.Dock="Bottom">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0, 0, 0, 5"/>
                </Style>
            </StackPanel.Resources>
            <Button Name="btnNoBorders" Click="btnNoBorders_Click" BorderThickness="0">No Borders</Button>
            <Button Name="btnThinBorders" Click="btnThinBorders_Click">Thin Borders</Button>
            <Button Name="btnThickBorders" Click="btnThickBorders_Click" BorderThickness="2">Thick Borders</Button>
            <Button Name="btnCancel" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </DockPanel>
</Window>
